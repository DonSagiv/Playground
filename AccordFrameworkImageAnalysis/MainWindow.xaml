<Window x:Class="AccordFrameworkImageAnalysis.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AccordFrameworkImageAnalysis"
		xmlns:converters="clr-namespace:ReliaCoat.Common.UI;assembly=ReliaCoat.Common.UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1300">

	<Window.Resources>
		<converters:DrawingToMediaConverter x:Key="d2m"/>
	</Window.Resources>

	<DockPanel>

		<Button Margin="10"
		        Content="Start Image Analysis"
		        DockPanel.Dock="Top"
		        Command="{Binding processImageCommand}"/>

		<UniformGrid Columns="2">

			<Image Margin="10"
			       Source="{Binding originalImage, Converter={StaticResource d2m}}" />

			<Image Margin="10"
			       Source="{Binding workingImage, Converter={StaticResource d2m}}" />

			<Image Margin="10"
			       Source="{Binding thresholdedImage, Converter={StaticResource d2m}}" />

			<Image Margin="10"
			       Source="{Binding firstBlobImage, Converter={StaticResource d2m}}" />

		</UniformGrid>
		
	</DockPanel>

</Window>
