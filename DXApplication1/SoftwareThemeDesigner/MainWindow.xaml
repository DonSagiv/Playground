<dx:ThemedWindow x:Class="SoftwareThemeDesigner.MainWindow"
				 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
				 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
				 xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
				 xmlns:cc="clr-namespace:SoftwareThemeDesigner"
				 xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
				 Title="MainWindow"
				 Height="350"
				 Width="525">

	<StackPanel>

		<cc:RctComboBox Margin="10"
						ItemsSource="{Binding comboBoxItems}"
						SelectedItem="{Binding comboBoxValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
						labelText="ComboBox Label"
						DisplayMemberPath="nestedClass.country"
						SelectedValuePath="nestedClass.country" />

		<dxe:ComboBoxEdit Margin="10"
						  ItemsSource="{Binding comboBoxItems}"
						  SelectedItem="{Binding comboBoxValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
						  DisplayMember="nestedClass.country" />

		<cc:RctTextBox Margin="10"
					   Text="{Binding textBoxString, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
					   labelText="Test Label" />

		<cc:RctSpinBox x:Name="spinBox"
					   Margin="10"
					   suffix=" SLPM"
					   stringFormat="00"
					   labelText="spinBoxLabel" />

	</StackPanel>

</dx:ThemedWindow>
