<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:SoftwareThemeDesigner"
                    xmlns:native="http://schemas.devexpress.com/winfx/2008/xaml/core/internal"
                    xmlns:themes="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys">

    <Style TargetType="{x:Type local:RctComboBox}"
           BasedOn="{StaticResource {x:Type ComboBox}}">
        <Setter Property="Background" Value="Gray"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="Foreground" Value="{native:ThemeResource {themes:ThemeColorsThemeKey ResourceKey=WhiteForegroundColor}}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:RctComboBox}">

                    <Grid>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Border x:Name="PART_Border"
                                Focusable="False"
                                Grid.Row="0"
                                Background="{TemplateBinding Background}"
                                Opacity="0.25"
                                CornerRadius="5, 5, 0, 0"/>

                        <TextBox x:Name="PART_EditableTextBox"
                                 Background="Transparent"
                                 BorderBrush="Transparent"
                                 HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                 FontSize="{TemplateBinding FontSize}"
                                 Grid.Row="0"
                                 Margin="0,5">
                            <TextBox.Template>
                                <ControlTemplate TargetType="{x:Type TextBox}">
                                    <Border x:Name="PART_ContentHost"
                                            Focusable="False"
                                            Background="{TemplateBinding Background}" />
                                </ControlTemplate>
                            </TextBox.Template>
                        </TextBox>

                        <Line x:Name="PART_Line"
                              Grid.Row="1"
                              X2="1"
                              Stretch="Fill"
                              StrokeThickness="1"
                              Stroke="{TemplateBinding BorderBrush}"
                              StrokeStartLineCap="Square"
                              StrokeEndLineCap="Square"/>

                        <TextBlock x:Name="PART_Label"
                                   Text="Label"
                                   Foreground="{TemplateBinding Foreground}"
                                   Grid.Row="2"
                                   Margin="10,0"
                                   Opacity="0.75"
                                   HorizontalAlignment="Left"/>

                    </Grid>

                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>