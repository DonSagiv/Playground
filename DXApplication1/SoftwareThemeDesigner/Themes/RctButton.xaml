<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:utilities="clr-namespace:SoftwareThemeDesigner.Utilities"
                    xmlns:softwareThemeDesigner="clr-namespace:SoftwareThemeDesigner"
                    xmlns:native="http://schemas.devexpress.com/winfx/2008/xaml/core/internal"
                    xmlns:themes="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys">

	<utilities:ToUpperConverter x:Key="toUpper" />

	<DropShadowEffect x:Key="buttonShadowEffect"
					  Color="Black"
					  Opacity="0.5"
					  ShadowDepth="2"
					  BlurRadius="2"
					  Direction="315"
					  RenderingBias="Performance" />

	<Style TargetType="{x:Type softwareThemeDesigner:RctButton}"
		   BasedOn="{StaticResource {x:Type Button}}">
		<Setter Property="Background"
				Value="{native:ThemeResource {themes:PaletteBrushThemeKey ResourceKey=Button.Background}}" />
		<Setter Property="Foreground"
				Value="{native:ThemeResource {themes:PaletteBrushThemeKey ResourceKey=Foreground}}" />
		<Setter Property="BorderBrush"
				Value="{native:ThemeResource {themes:PaletteBrushThemeKey ResourceKey=Foreground}}" />
		<Setter Property="FontSize"
				Value="16" />
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type softwareThemeDesigner:RctButton}">

					<Grid>

						<Border CornerRadius="5"
								BorderThickness="0"
								BorderBrush="{TemplateBinding BorderBrush}"
								Background="{TemplateBinding Background}"
								Effect="{StaticResource buttonShadowEffect}">
							<Border.Style>
								<Style TargetType="{x:Type Border}">
									<Setter Property="ClipToBounds"
											Value="False" />
									<Style.Triggers>
										<DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=softwareThemeDesigner:RctButton}, Path=IsPressed}"
													 Value="True">
											<Setter Property="ClipToBounds"
													Value="True" />
										</DataTrigger>
									</Style.Triggers>
								</Style>
							</Border.Style>
						</Border>

						<ContentPresenter x:Name="PART_ContentHost"
										  HorizontalAlignment="Center"
										  VerticalAlignment="Center">
							<ContentPresenter.ContentTemplate>
								<DataTemplate>
									<TextBlock Text="{Binding Converter={StaticResource toUpper}}" />
								</DataTemplate>
							</ContentPresenter.ContentTemplate>
						</ContentPresenter>

					</Grid>

				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

</ResourceDictionary>