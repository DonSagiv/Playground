<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:SoftwareThemeDesigner"
                    xmlns:dxi="http://schemas.devexpress.com/winfx/2008/xaml/core/internal"
                    xmlns:dxt="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys">

	<Style TargetType="{x:Type local:RctCheckBox}"
	       BasedOn="{StaticResource {x:Type CheckBox}}">
		<Setter Property="Background"
		        Value="Transparent" />
		<Setter Property="Foreground"
		        Value="{dxi:ThemeResource {dxt:PaletteBrushThemeKey ResourceKey=Foreground}}" />
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type CheckBox}">

					<Border Background="{TemplateBinding Background}"
					        Opacity="0.5">

						<Grid>

							<ContentPresenter Margin="4,0,0,0"
							                  VerticalAlignment="Center"
							                  HorizontalAlignment="Left"
							                  RecognizesAccessKey="True" />

							<DockPanel>

								<Border DockPanel.Dock="Left"
								        VerticalAlignment="Center">

									<Path x:Name="PART_CheckBoxShape"
									      Fill="{TemplateBinding Foreground}"
									      Stretch="Uniform"
									      Height="20"
									      Width="20"
									      Margin="5"
									      HorizontalAlignment="Center"
									      VerticalAlignment="Center" />

								</Border>

								<TextBlock Text="CheckBox"
								           Margin="5"
								           VerticalAlignment="Center" />

							</DockPanel>

						</Grid>

					</Border>

				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

</ResourceDictionary>