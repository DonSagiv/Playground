<UserControl x:Class="SciChartAnnotationsExperiments.CustomAnnotations.ModifiableEllipse"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Border x:Name="border">
        <Ellipse x:Name="ellipse"
                 Fill="#66FF0000"
                 Stroke="White"
                 StrokeThickness="2"
                 MouseRightButtonUp="onRightClickEllipse"/>
    </Border>

</UserControl>
