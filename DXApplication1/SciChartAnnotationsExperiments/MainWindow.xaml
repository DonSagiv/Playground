<dx:ThemedWindow x:Class="SciChartAnnotationsExperiments.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
        xmlns:s="http://schemas.abtsoftware.co.uk/scichart"
        xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
        WindowKind="Normal" WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="1000" Width="1600"
        dx:ThemeManager.Theme="MetropolisDark">

    <DockPanel>

        <dxb:ToolBarControl DockPanel.Dock="Top">

            <dxb:BarCheckItem x:Name="ellipseCheckItem"
                              IsChecked="False"
                              Content="Ellipse"
                              CheckedChanged="onDrawClicked" />

            <dxb:BarCheckItem x:Name="boxCheckItem"
                              IsChecked="False"
                              Content="Box"
                              CheckedChanged="onDrawClicked" />

        </dxb:ToolBarControl>

        <s:SciChartSurface x:Name="sciChartSurface"
                       Annotations="{Binding annotations}"
                       ChartModifier="{Binding modifiers}"
                       RenderableSeries="{s:SeriesBinding renderableSeriesList}"
                       XAxis="{Binding xAxis}"
                       YAxis="{Binding yAxis}"/>

    </DockPanel>

</dx:ThemedWindow>
