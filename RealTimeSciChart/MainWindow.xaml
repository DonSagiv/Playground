<Window x:Class="RealTimeSciChart.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RealTimeSciChart"
        mc:Ignorable="d"
        xmlns:s="http://schemas.abtsoftware.co.uk/scichart"
        Title="MainWindow" Height="350" Width="525">
    <DockPanel>

        <UniformGrid DockPanel.Dock="Top" Margin="5">
            <Button Content="Start" Click="Button_Click"/>
        </UniformGrid>

        <s:SciChartSurface x:Name="chart">

            <s:SciChartSurface.RenderableSeries>
                <s:FastLineRenderableSeries Stroke="Orange" x:Name="series0"/>
                <s:FastLineRenderableSeries Stroke="DodgerBlue" x:Name="series1"/>
                <s:FastLineRenderableSeries Stroke="DodgerBlue" x:Name="series2"/>
            </s:SciChartSurface.RenderableSeries>

            <s:SciChartSurface.XAxis>
                <s:NumericAxis AxisTitle="Time" AutoRange="Always"/>
            </s:SciChartSurface.XAxis>

            <s:SciChartSurface.YAxis>
                <s:NumericAxis AxisTitle="Voltage" AxisAlignment="Left" AutoRange="Always"/>
            </s:SciChartSurface.YAxis>

        </s:SciChartSurface>
    </DockPanel>
</Window>
