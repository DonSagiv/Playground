<Selector x:Class="EnumRadioButtonDesigner.Views.EnumRadioButtonSelector"
          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
          xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
          xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
          xmlns:views="clr-namespace:EnumRadioButtonDesigner.Views">

    <Selector.ItemTemplate>
        <DataTemplate DataType="{x:Type views:EnumRadioButtonContext}">
            <RadioButton Margin="1" Content="{Binding enumValueName}" IsChecked="{Binding isChecked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Click="onRadioButtonClicked"
                         GroupName="enumRadioButtonGroup"/>
        </DataTemplate>
    </Selector.ItemTemplate>

</Selector>
