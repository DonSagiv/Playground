<dx:DXWindow
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
        xmlns:local="clr-namespace:GridDrag"
        x:Class="GridDrag.MainWindow"
        Title="MainWindow" Height="800" Width="1000">

    <DockPanel>
        <Button DockPanel.Dock="Top" Content="Add Item" Command="{Binding addItemCommand}"/>
        <local:GridStack Margin="5" x:Name="gridStack" NumColumns="12" MinRows="8" MinRowHeight="50"
                         ItemMargin="3" Children="{Binding gridElements}"/>
    </DockPanel>

</dx:DXWindow>
