<s:BoxAnnotation x:Class="SciChartAnnotationsExperiments.CustomAnnotations.EllipseAnnotation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:s="http://schemas.abtsoftware.co.uk/scichart"
             xmlns:ca="clr-namespace:SciChartAnnotationsExperiments.CustomAnnotations"
             mc:Ignorable="d">

    <s:BoxAnnotation.Template>
        <ControlTemplate>
            <Border x:Name="PART_BoxAnnotationRoot">
                <ca:ModifiableEllipse Loaded="onEllipseLoaded"/>
            </Border>
        </ControlTemplate>
    </s:BoxAnnotation.Template>

</s:BoxAnnotation>
