<UserControl x:Class="SciChartAnnotationsExperiments.CustomAnnotations.ModifiableEllipse"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Border x:Name="border" ClipToBounds="False">

        <Grid>

            <Ellipse x:Name="ellipse"
                     Fill="#66FF0000"/>

            <Line x:Name="angleLine"
                  Stroke="DodgerBlue"/>

            <Path x:Name="renderedPath"
                  Stretch="Fill"
                  Fill="#6600FF00"/>

        </Grid>

    </Border>


</UserControl>
