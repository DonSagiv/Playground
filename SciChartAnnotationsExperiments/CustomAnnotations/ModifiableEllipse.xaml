<UserControl x:Class="SciChartAnnotationsExperiments.CustomAnnotations.ModifiableEllipse"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<Border x:Name="border" ClipToBounds="False">

		<Grid>

			<ContentControl x:Name="ellipseControl">
				<Ellipse x:Name="ellipse" Fill="#66FF0000"/>
			</ContentControl>

			<ContentControl x:Name="angelLineControl">
				<Line x:Name="angleLine"
				      Stroke="DodgerBlue"/>
			</ContentControl>

			<ContentControl x:Name="renderedPathControl">
				<Path x:Name="renderedPath"
				      Stretch="Fill"
				      Fill="#6600FF00"/>
			</ContentControl>

		</Grid>

	</Border>


</UserControl>
